@page "/postsPage"
@using UNFORGOTTEN.Shared
@inject HttpClient http

<h3>PostsPage</h3>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Description</th>
            <th>Added On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Posts)
        {
            <tr>
                <td>@post.Id</td>
                <td>@post.Title</td>
                <td>@post.Author</td>
                <td>@post.Description</td>
                <td>@post.AddedOn.ToString("yyyy-MM-dd HH:mm:ss")</td>
            </tr>
        }
    </tbody>
</table>

@code {
    List<Post> Posts = new List<Post>();

    protected override async Task OnInitializedAsync()
    {
        var result = await http.GetFromJsonAsync<List<Post>>("api/Posts");
        if (result != null)
        {
            Posts = result;
        }
    }
}
